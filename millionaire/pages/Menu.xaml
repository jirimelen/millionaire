<Page x:Class="millionaire.pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:millionaire.pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Menu">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="center" HorizontalAlignment="center">
            <Button Click="NewGame" Height="75" Width="300" FontSize="30" Margin="0 0 0 10">New game</Button>
            <Button x:Name="WPF_continueButton" Click="Continue" Height="75" Width="300" FontSize="30" Margin="0 0 0 10">Continue</Button>
            <Button Click="Scoreboard" Height="75" Width="300" FontSize="30" Margin="0 0 0 10">Scoreboard</Button>
            <Button Click="Exit" Height="75" Width="300" FontSize="30">Exit</Button>
        </StackPanel>
    </Grid>
</Page>
